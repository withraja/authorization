<%- include('./layouts/header.ejs') %> 

<body>
    <h1>Selamat Datang di Authentication App</h1>
    <h3>Silahkan Daftar</h3>
        <form id="register" method="post" action="/users/register">
          <div class="mb-3">
            <label for="Email">Alamat Email</label>
            <input id="Email" type="email" class="form-control" name="email" required />
          </div>
          <div class="mb-3">
            <label for="password">Password</label>
            <input id="password" type="password" name="password" class="form-control" placeholder="Masukkan Password" required />
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="role"
              id="role"
              value="student"
            />
            <label class="form-check-label" for="role" required>Student </label>
            </div>
          <button id="submit" type="submit" class="btn btn-primary">Register</button>
        </form>
        <a id="button-login" href="/users/login" class="btn btn-light">Login</a>
      </section>
  </body>

